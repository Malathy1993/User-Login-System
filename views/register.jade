extends layout

block content
    h1 Register
    form(method="POST", action='/users/register',enctype='multipart/form-data')
        .form-group
            label Name
            input.form-control(type="text", name="name", placeholder="Enter Name")
        .form-group
            label Email
            input.form-control(type="email", name="email", placeholder="Enter Email")
        .form-group
            label Username
            input.form-control(type="text", name="name", placeholder="Enter Username")
        .form-group
            label Password
            input.form-control(type="password", name="name", placeholder="Enter Password")
        .form-group
            label Confirm Password
            input.form-control(type="password", name="name", placeholder="Confirm Password")
        .form-group
            label Profile Image
            input.form-control(type="file", name="profileImage")
        input.btn.btn-default(type="submit",name="submit",value="Register") 

                   